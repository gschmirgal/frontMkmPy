{# templates/components/table.html.twig #}
{% if addPaginationRender %}
    {{ knp_pagination_render(addPaginationRender)}}
{% endif %}
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            {% for header in headers %}
                <th>{{ header }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for row in rows %}
            <tr>
                {% for cell in row %}
                    <td>{{ cell }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>
</table>

{% if addPaginationRender %}
    {{ knp_pagination_render(addPaginationRender)}}
{% endif %}
