{% if trendingGainers is not empty or trendingLosers is not empty %}
<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-graph-up-arrow me-2"></i>{{ 'home.trending.title'|trans }}
        </h2>
        <a href="{{ path('app_rankings', {timeframe: '7d', foil: 'normal'}) }}" class="btn btn-outline-primary">
            {{ 'home.view_all'|trans }} <i class="bi bi-arrow-right ms-1"></i>
        </a>
    </div>

    <div class="row g-4">
        {# Top Gainers #}
        {% if trendingGainers is not empty %}
        <div class="col-lg-6">
            <div class="card h-100 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-arrow-up-circle me-2"></i>{{ 'home.trending.top_gainers'|trans }}
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% for item in trendingGainers %}
                        <a href="{{ path('card.cardlist.detail', {cardid: item.product.id, expansionid: item.expansion.id}) }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-3">
                                {% if item.imageUrl %}
                                <img src="{{ item.imageUrl }}" alt="{{ item.product.name }}"
                                     class="rounded" style="width: 40px; height: auto;">
                                {% endif %}
                                <div>
                                    <div class="fw-semibold">{{ item.product.name }}</div>
                                    <small class="text-muted">{{ item.expansion.name }}</small>
                                </div>
                            </div>
                            <span class="badge bg-success fs-6">
                                +{{ item.variationPct|number_format(1, '.', ',') }}%
                            </span>
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        {# Top Losers #}
        {% if trendingLosers is not empty %}
        <div class="col-lg-6">
            <div class="card h-100 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-arrow-down-circle me-2"></i>{{ 'home.trending.top_losers'|trans }}
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% for item in trendingLosers %}
                        <a href="{{ path('card.cardlist.detail', {cardid: item.product.id, expansionid: item.expansion.id}) }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-3">
                                {% if item.imageUrl %}
                                <img src="{{ item.imageUrl }}" alt="{{ item.product.name }}"
                                     class="rounded" style="width: 40px; height: auto;">
                                {% endif %}
                                <div>
                                    <div class="fw-semibold">{{ item.product.name }}</div>
                                    <small class="text-muted">{{ item.expansion.name }}</small>
                                </div>
                            </div>
                            <span class="badge bg-danger fs-6">
                                {{ item.variationPct|number_format(1, '.', ',') }}%
                            </span>
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}
