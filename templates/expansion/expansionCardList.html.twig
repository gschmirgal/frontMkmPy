{% extends 'base.html.twig' %}

{% block title %}{{"Cards list - "~expansion.name}} {% endblock %}

{% block body %}
    <h1>{{expansion.name}}</h1>

    <div class="list-group">
        {% for card in cards |sort((a, b) => a.name <=> b.name) %}
            {% if card.scryfall.first %}
                {% set imgUri = card.scryfall.first.imgNormalUri %}

            {% else %}
                {% set imgUri = asset('img/no_card.png') %}
            {% endif %}
            <a class="list-group-item list-group-item-action hover-link" 
            href="{{ path('expansion.cardlist.detail', {expansionid: expansion.id, cardid: card.id })}}" 
            data-img="{{imgUri}}">{{ card.name }}</a>

        {% endfor %}
    </div>
{% endblock %}