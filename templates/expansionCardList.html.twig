{% extends 'base.html.twig' %}

{% block title %}{{"Cards list - "~expansion.name}} {% endblock %}

{% block body %}
    <h1>{{expansion.name}}</h1>
    <ul>
    {% for card in cards |sort((a, b) => a.name <=> b.name)%}
        <li>
            <a href="{{ path('expansion.cardlist.detail', {expansionid: expansion.id, cardid: card.id })}}">{{ card.name }}</a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}