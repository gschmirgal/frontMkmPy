{% extends 'base.html.twig' %}

{% block title %}Card List{% endblock %}

{% block body %}
    <h1>Cards List</h1>
    <div class="list-group">
        {% for card in cards %}
            <a class="list-group-item list-group-item-action" href="{{ path('card.expansionlist', {id: card.id })}}">{{ card.name }}</a>
        {% endfor %}
    </div>
{% endblock %}