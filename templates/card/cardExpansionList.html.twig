{% extends 'base.html.twig' %}

{% block title %}{{"Expansion List - "~originalcard.name}} {% endblock %}

{% block body %}
    <h1>{{ originalcard.name}}</h1>
    <div class="list-group">
        {% for card in cards |sort((a, b) => a.expansion.name <=> b.expansion.name)%}
            <a class="list-group-item list-group-item-action" href="{{ path('card.cardlist.detail', {expansionid: card.expansion.id, cardid: card.id })}}">{{ card.expansion.name }}</a>
        {% endfor %}
    </div>
{% endblock %}