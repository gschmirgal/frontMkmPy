{% extends 'base.html.twig' %}

{% block title %}{{"Card Details - "~card.name~"-"~expansion.name}} {% endblock %}

{% block body %}
    <h1><a href="{{ path('card.expansionlist', {id: card.id })}}">{{ card.name }}</a></h1>
    <h2><a href="{{ path('expansion.cardlist', {id: expansion.id })}}">{{ expansion.name }}</a></h2>
    <table>
        <tr>
        {% for column in tableColumns %}
            <th>{{ column }}</th>
        {% endfor %}
        </tr>
        {% for price in prices %}  
            <tr> 
                {% for key, column in tableColumns %}
                    <td>
                    {% if key == 'dateData'%}
                        {{ attribute(price, key) |date('Y-m-d')}}
                    {% else %}
                        {{ attribute(price, key) ~"â‚¬"}}
                    {% endif %}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}